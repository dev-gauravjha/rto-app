<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_background"
    ads:layout_behavior="@string/appbar_scrolling_view_behavior">



    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:background="@color/md_primary"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:onClick="onClick"
            android:padding="5dp"
            android:src="@drawable/ic_back"
            ads:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/robotoslab_regular"
            android:text="Vehicle Information"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </RelativeLayout>



    <com.google.android.material.card.MaterialCardView
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15sdp"
        ads:contentPadding="@dimen/_15sdp"
        ads:cardCornerRadius="@dimen/_5sdp"
        ads:cardElevation="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_border"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/mukta_medium"
                android:text="Enter Vehicle Number"
                android:textColor="@color/md_primary"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <EditText
                    android:id="@+id/et_01"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2"
                    android:background="@drawable/blackborder"
                    android:gravity="center_horizontal"
                    android:hint="GJ"
                    android:inputType="textCapCharacters"
                    android:maxLength="2"
                    android:padding="15dp"
                    android:textColor="#151515"
                    android:textColorHint="#989898" />

                <EditText
                    android:id="@+id/et_02"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2"
                    android:background="@drawable/blackborder"
                    android:gravity="center_horizontal"
                    android:hint="00"
                    android:inputType="number"
                    android:maxLength="2"
                    android:padding="15dp"
                    android:textColor="#151515"
                    android:textColorHint="#989898" />

                <EditText
                    android:id="@+id/et_03"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2"
                    android:background="@drawable/blackborder"
                    android:gravity="center_horizontal"
                    android:hint="XX"
                    android:inputType="textCapCharacters"
                    android:maxLength="2"
                    android:padding="15dp"
                    android:textColor="#151515"
                    android:textColorHint="#989898" />

                <EditText
                    android:id="@+id/et_04"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="4"
                    android:background="@drawable/blackborder"
                    android:gravity="center_horizontal"
                    android:hint="0000"
                    android:inputType="number"
                    android:maxLength="4"
                    android:padding="15dp"
                    android:textColor="#151515"
                    android:textColorHint="#989898" />
            </LinearLayout>

            <Button
                android:id="@+id/btnSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_btn_border"
                android:text="@string/search"
                android:fontFamily="@font/mukta_medium"
                android:textColor="#ffffffff"
                android:textSize="20sp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <RelativeLayout
        android:id="@+id/ads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:minHeight="250dp">

        <FrameLayout
            android:id="@+id/mobadslayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" />


    </RelativeLayout>

</RelativeLayout>
